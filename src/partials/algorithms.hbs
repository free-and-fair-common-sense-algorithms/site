<div class="pt-4" id="algorithms">

  {{#each algorithms }}
    <div class="container">
      <a href="/{{ this.filename }}/">
        <div class="row mb-5 mx-1 mx-md-0 hover-shadow">
          <div class="part-left p-4 col-8 col-md-3">
            <h2>{{ this.name }}</h2>
          </div>
          <div class="part-right col-4 d-block d-md-none">
            <div class="arrow-container">
              <svg class="arrow-outline" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="-1 0 148 120" xml:space="preserve">
                  <path style="fill:none; stroke:#000000; stroke-width:1px;" d="M0.4,46L95,46L65,18.7l18.5-18l61.9,59l-61.9,58.7l-18.5-18l30.1-27.3H0.4V46z"/>
              </svg>
            </div>
          </div>
          <div class="part-middle p-4 col-12 col-md-6">
            <h4>{{ this.description }}</h4>
          </div>
          <div class="part-right col-3 d-none d-md-block">
            <div class="arrow-container">
              <svg class="arrow-outline" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="-1 0 148 120" xml:space="preserve">
                  <path style="fill:none; stroke:#000000; stroke-width:1px;" d="M0.4,46L95,46L65,18.7l18.5-18l61.9,59l-61.9,58.7l-18.5-18l30.1-27.3H0.4V46z"/>
              </svg>
            </div>
          </div>
        </div>
      </a>
    </div>
  {{/each}}

</div>
